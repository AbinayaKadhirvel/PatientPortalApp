<body class="login-img3-body">

  <div class="container">

    <form class="login-form" id='login-form' method='post' action="" >
      <div class="login-wrap">
        <p class="login-img"><i class="icon_lock_alt"></i></p>
        <div class="input-group">
          <span class="input-group-addon"><i class="icon_profile"></i></span>
          <input type="text" name='email' class="form-control" placeholder="Email" autofocus>
        </div>
        <div class="input-group">
          <span class="input-group-addon"><i class="icon_key_alt"></i></span>
          <input type="password" name='password' class="form-control" placeholder="Password">
        </div>
        <% if (emailexists == 1) { %>
                 <div class="error red-bg" >Email already exists</div>
        <% } %>
        <% if (loginerror == 1) { %>
                 <div class="error red-bg" >Error loging in! Please login again</div>
        <% } %>
        <% if (sessiontimeout == 1) { %>
                 <div class="error red-bg" >Session timedout . Login again</div>
        <% } %>
        <button class="btn btn-primary btn-lg btn-block" id='loginsubmit' >Login</button>
        <button class="btn btn-info btn-lg btn-block"id='signupsubmit' >Signup</button>
      </div>
    </form>
     <script src="/js/jquery.js"></script>
     <script src="js/index.js"></script>
  </div>


</body>

</html>
